{
	"name": "fmpl",
	"version": "2.0.0",
	"description": "fucking template engine",
	"keywords": [ "template", "engine" ],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/tmont/fmpl.git"
	},

	"bin": {
		"fmpl": "./bin/fmpl.js"
	},

	"files": [
		"bin/fmpl.js",
		"dist/index.js",
		"dist/index.d.ts"
